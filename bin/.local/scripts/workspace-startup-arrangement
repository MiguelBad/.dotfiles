#!/usr/bin/env bash

sleep 1

i3-msg restart

sleep 1

i3-msg '[class="Alacritty" title="primary"] move to workspace 1'
i3-msg '[class="Alacritty" title="secondary"] move container to down'

sleep 1

i3-msg '[class="Alacritty" title="cava"] resize set width 700px'
i3-msg '[class="Spotify"] resize set height 1100px'
i3-msg '[class="Google-chrome" title="Messenger — Google Chrome"] move to workspace 11'

sleep 1 

i3-msg '[class="Alacritty" title="secondary"] move container to down'

sleep 2 

i3-msg '[class="firefox" title="Google — Mozilla Firefox"] move to workspace 2'
i3-msg '[class="firefox" title="Blackboard Learn — Mozilla Firefox"] move container to workspace 10'

sleep 1

i3-msg '[class="Google-chrome" title="Messenger — Google Chrome"] move container to up'
i3-msg 'focus output DP-0; workspace 1'
