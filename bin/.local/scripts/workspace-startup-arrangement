i3-msg '[class="Spotify"] resize set height 1100px'

i3-msg '[class="Alacritty" title="secondary"] move container to down'
i3-msg '[class="Alacritty" title="notes"] move container to down'

sleep 1 

i3-msg '[class="Alacritty" title="secondary"] move container to down'
i3-msg '[class="Alacritty" title="notes"] move container to down'

sleep 1 

i3-msg '[class="firefox" title="Google — Mozilla Firefox"] move to workspace 2'
i3-msg '[class="firefox" title="Blackboard Learn — Mozilla Firefox"] move container to workspace 10'
i3-msg '[class="Alacritty" title="notes"] move container to down'

sleep 1 

i3-msg '[class="Alacritty" title="secondary"] move container to down'
i3-msg '[class="Alacritty" title="notes"] move container to down'

sleep 1

i3-msg '[class="discord"] move container to up'

sleep 1

i3-msg '[class="discord"] move container to up'

sleep 1

i3-msg '[class="Alacritty" title="notes"] split horizontally'
i3-msg '[class="Alacritty" title="secondary"] move container to down'

sleep 1

i3-msg 'focus output DP-0; workspace 1'
